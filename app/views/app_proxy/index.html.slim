.app-container
  #mySidenav.sidenav.hidden-on-large-screen
    - if ProductSetting.last.true_filter_on
      div style='padding: 1rem 1rem'
        .close-filter-container
          .close-filter-text FILTER
          a.closebtn.hidden-on-large-screen style="font-size: 20px" href="javascript:void(0)" &times;

        - if params[:brand].present?
          - params[:brand].each do |brand|
            - newbrand = params[:brand].dup
            - newbrand.delete(brand)
            = link_to proxy_prod_path(size: params[:size], product_type: params[:product_type], price: params[:price], brand: newbrand, collection: params[:collection]) do
              .black-box-container
                .black-box-parent style='position: relative'
                  .black-box style='position: relative; top: 0; left: 0'
                  .small-black-box style='position: absolute; top: 0; left: 0'
                .sub-heading = brand
                .remove-filter

        - if params[:size].present?
          - params[:size].each do |size|
            - newSize = params[:size].dup
            - newSize.delete(size)
            = link_to proxy_prod_path(brand: params[:brand], product_type: params[:product_type], price: params[:price], size: newSize, collection: params[:collection]) do
              .black-box-container
                .black-box-parent style='position: relative'
                  .black-box style='position: relative; top: 0; left: 0'
                  .small-black-box style='position: absolute; top: 0; left: 0'
                .sub-heading = "Size #{size}"
                .remove-filter

          - if params[:price].present?
            = link_to proxy_prod_path(brand: params[:brand], product_type: params[:product_type], size: params[:size], collection: params[:collection]) do
              .black-box-container
                .black-box-parent style='position: relative'
                  .black-box style='position: relative; top: 0; left: 0'
                  .small-black-box style='position: absolute; top: 0; left: 0'
                .sub-heading = params[:price]
                .remove-filter

        - if params[:product_type].present?
          - params[:product_type].each do |pt|
            - newpt = params[:product_type].dup
            - newpt.delete(pt)
            = link_to proxy_prod_path(brand: params[:brand], size: params[:size], price: params[:price], product_type: newpt, collection: params[:collection]) do
              .black-box-container
                .black-box-parent style='position: relative'
                  .black-box style='position: relative; top: 0; left: 0'
                  .small-black-box style='position: absolute; top: 0; left: 0'
                .sub-heading = pt
                .remove-filter

        - if params[:colour].present?
          - params[:colour].each do |colour|
            - newcolour = params[:colour].dup
            - newcolour.delete(colour)
            = link_to proxy_prod_path(size: params[:size], product_type: params[:product_type], price: params[:price], brand: params[:brand], colour: newcolour, collection: params[:collection]) do
              .black-box-container
                .black-box-parent style='position: relative'
                  .black-box style='position: relative; top: 0; left: 0'
                  .small-black-box style='position: absolute; top: 0; left: 0'
                .sub-heading = colour
                .remove-filter

        - ProductSetting.last.filter_array.each do |filter|
          = render partial: filter, locals: {desktop: false}

  #myLeftSidenav.sidenav.hidden-on-large-screen
    div style='padding: 0 20px'
      .close-filter-container style='margin: 1rem 0 1rem 0'
        .close-filter-text SORT
        a.close-sort-btn.hidden-on-large-screen style="font-size: 20px" href="javascript:void(0)" &times;
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'title_ascending', q: params[:q], collection: params[:collection])}" Alphabetically, A-Z
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'title_descending', q: params[:q], collection: params[:collection])}" Alphabetically, Z-A
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'price_ascending', q: params[:q], collection: params[:collection])}" Price, low to high
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'price_descending', q: params[:q], collection: params[:collection])}" Price, high to low
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'created_descending', q: params[:q], collection: params[:collection])}" Date, new to old
      .sort-nav-container
        .black-box
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'created_ascending', q: params[:q], collection: params[:collection])}" Date, old to new

  .hidden-on-large-screen
      - if params[:q].present?
        div style="font-size: 18px; font-weight: bold;" = "SEARCH RESULTS FOR #{params[:q]}".upcase
      - else
        div style="font-size: 18px; font-weight: bold;" = params[:collection].present? ? "#{Filter.title_string_for_collection(params[:collection]).upcase} VINTAGE"  : 'TRUE VINTAGE NEW IN'
      div style="font-size: 13px;"= "#{@products_count} ITEMS FOUND"
  .openbtn-container.hidden-on-large-screen
    - if ProductSetting.last.true_filter_on
      .openbtn-sub-container.hidden-on-large-screen.openbtn style="padding: 3px 0"
        span.hidden-on-large-screen style="font-size:14px; cursor:pointer" FILTER

    .openbtn-sub-container.hidden-on-large-screen.open-sort-btn style="padding: 3px 0"
      span.hidden-on-large-screen style="font-size:14px; cursor:pointer" SORT

  - if params[:q].present?
    .product-searched-heading.hidden-on-small-screen = "SEARCH RESULTS FOR #{params[:q]}".upcase
  - else
    .product-searched-heading.hidden-on-small-screen = params[:collection].present? ? "#{Filter.title_string_for_collection(params[:collection]).upcase} VINTAGE"  : 'TRUE VINTAGE NEW IN'
  .products-found-count.hidden-on-small-screen = "#{@products_count} ITEMS FOUND"

  .filter-container.hidden-on-small-screen
    .filter-heading-container
      - if ProductSetting.last.true_filter_on
        .filter-heading FILTER
        .js-main-filter-icon.js-show-main-filter

    .dropdown
      button.dropbtn
        span style="color: black" = sort_params_title(params[:sort_by])
        .arrow-down
      .dropdown-content
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'title_ascending', q: params[:q], collection: params[:collection])}"  Alphabetically, A-Z
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'price_ascending', q: params[:q], collection: params[:collection])}"  Price, low to high
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'price_descending', q: params[:q], collection: params[:collection])}"  Price, high to low
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'created_descending', q: params[:q], collection: params[:collection])}"  Date, new to old
        a href="#{proxy_prod_url(brand: params[:brand], size: params[:size], product_type: params[:product_type], sort_by: 'created_ascending', q: params[:q], collection: params[:collection])}"  Date, old to new


  .clearfix.main-container
    - if ProductSetting.last.true_filter_on
      .box-1
        .filter-data-options-container.js-main-container.hidden-on-small-screen#js-sidebar-filter
