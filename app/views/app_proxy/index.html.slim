          - if params[:size].present?
            - params[:size].each do |size|
              - newSize = params[:size].dup
              - newSize.delete(size)
              = link_to proxy_prod_path(brand: params[:brand], product_type: params[:product_type], price: params[:price], size: newSize, q: params[:q], collection: params[:collection]) do
                .black-box-container
                  .black-box-parent style='position: relative'
                    .black-box style='position: relative; top: 0; left: 0'
                    .small-black-box style='position: absolute; top: 0; left: 0'
                  .sub-heading = "Size #{size}"
                  .remove-filter

            - if params[:price].present?
              = link_to proxy_prod_path(brand: params[:brand], product_type: params[:product_type], size: params[:size], q: params[:q], collection: params[:collection]) do
                .black-box-container
                  .black-box-parent style='position: relative'
                    .black-box style='position: relative; top: 0; left: 0'
                    .small-black-box style='position: absolute; top: 0; left: 0'
                  .sub-heading = params[:price]
                  .remove-filter

          - if params[:product_type].present?
            - params[:product_type].each do |pt|
              - newpt = params[:product_type].dup
              - newpt.delete(pt)
              = link_to proxy_prod_path(brand: params[:brand], size: params[:size], price: params[:price], product_type: newpt, q: params[:q], collection: params[:collection]) do
                .black-box-container
                  .black-box-parent style='position: relative'
                    .black-box style='position: relative; top: 0; left: 0'
                    .small-black-box style='position: absolute; top: 0; left: 0'
                  .sub-heading = pt
                  .remove-filter

          - if params[:colour].present?
            - params[:colour].each do |colour|
              - newcolour = params[:colour].dup
              - newcolour.delete(colour)
              = link_to proxy_prod_path(size: params[:size], product_type: params[:product_type], price: params[:price], brand: params[:brand], colour: newcolour, q: params[:q], collection: params[:collection]) do
                .black-box-container
                  .black-box-parent style='position: relative'
                    .black-box style='position: relative; top: 0; left: 0'
                    .small-black-box style='position: absolute; top: 0; left: 0'
                  .sub-heading = colour
                  .remove-filter

          - ProductSetting.last.filter_array.each do |filter|
            = render partial: filter, locals: {desktop: true}
    .box-2 style="#{ProductSetting.last.true_filter_on ? '' : 'width: 100% !important'}"
      .product-container
        .js-all-products
          = render partial: 'home/products', locals: {showFirst: true}

    - if ProductSetting.last.autoscroll_on
      .gif-container
        .loading-gif.js-loading-gif style="background-image: url('#{ProductSetting.last.image.url}')"
    - else
      div style="width: 100%; text-align: center"
        = link_to ProductSetting.last.load_more_text, 'javascript:void(0)', class: 'js-load-more button', style: 'text-align: center;height: 56px;font-size: 20px; background-color: black'

javascript:
  Window.paramUrl = "&#{request.url.split('?')[1].split('shop')[0]}"
